{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Param√®tres utilisateur{% endblock %}

{% set media = app.user.picture ? '/uploads/users-images/' ~ app.user.picture : asset('build/images/user-placeholder.png') %}

{% block body %}
<div id="settings-zone">
    <div class="settings-zone-left">
        {% include'/partials/inc/settings_left.html.twig' %}
    </div>
        <div class="settings-zone-right">
            <h1 style="align-self: flex-start">Profil</h1>
            <a class="btn profile-settings-button" style="align-self: flex-end"  href="/users/{{ app.user.slug }}">Retour au profil</a>
            {{ form_start(form, {'attr' : {'class' : 'profile-editor-form'}}) }}
            <div class="form-group-row">
                <img id="profile-settings-image" src="{{ media }}" class="avatar" alt="">
                <div class="form-group">
                {{ form_label(form.file, 'Image de profil', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.file, {'value': media }) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, { attr: {'class': 'form-control'}}) }}
            </div>
            <div class="form-submit">
                <button type="submit" class="btn">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
